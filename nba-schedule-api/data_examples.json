  "formules_calculs_utiles": {
    "description": "Formules pour calculer des métriques avancées",
    "formules": {
      "possessions_estimees": "((FGA - OREB) + TOV + 0.4 * FTA)",
      "efficacite_offensive": "PTS / possessions * 100",
      "efficacite_defensive": "PTS_adversaire / possessions * 100",
      "true_shooting_percentage": "PTS / (2 * (FGA + 0.44 * FTA))",
      "effective_fg_percentage": "(FGM + 0.5 * FG3M) / FGA",
      "turnover_percentage": "TOV / (FGA + 0.44 * FTA + TOV) * 100",
      "rebound_percentage": "REB / (REB + REB_adversaire) * 100"
    }
  },
  
