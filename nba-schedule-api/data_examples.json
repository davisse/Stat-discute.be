  "codes_statistiques": {
    "description": "Légende des codes utilisés dans les statistiques",
    "codes": {
      "WL": "Win/Loss (W = victoire, L = défaite)",
      "PTS": "Points",
      "MIN": "Minutes jouées",
      "FGM": "Field Goals Made (tirs réussis)",
      "FGA": "Field Goals Attempted (tirs tentés)",
      "FG_PCT": "Field Goal Percentage (pourcentage de réussite)",
      "FG3M": "3-Point Field Goals Made (3 points réussis)",
      "FG3A": "3-Point Field Goals Attempted (3 points tentés)",
      "FG3_PCT": "3-Point Field Goal Percentage",
      "FTM": "Free Throws Made (lancers francs réussis)",
      "FTA": "Free Throws Attempted (lancers francs tentés)",
      "FT_PCT": "Free Throw Percentage",
      "OREB": "Offensive Rebounds (rebonds offensifs)",
      "DREB": "Defensive Rebounds (rebonds défensifs)",
      "REB": "Total Rebounds (rebonds totaux)",
      "AST": "Assists (passes décisives)",
      "STL": "Steals (interceptions)",
      "BLK": "Blocks (contres)",
      "TOV": "Turnovers (pertes de balle)",
      "PF": "Personal Fouls (fautes personnelles)",
      "PLUS_MINUS": "+/- (différence de points quand le joueur est sur le terrain)"
    }
  },
  
